@model PracticaLogin.ViewModels.UsuarioVM    ;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Registrarse</title>
</head>
<body>
   <div class="row mt-5 justify-content-center">

    <div class="col-sm-4">
        <div class="card">
            <div class="card-header">Registrate</div>
            <div class="card-body">
                <form asp-controller="Acceso" asp-action="Registrarse" method="post">
                    <input class="form-controller mb-3 rounded-1" type="text" placeholder="Nombre Completo" required asp-for="NombreCompleto">
                    <input class="form-controller mb-3 rounded-1" type="text" placeholder="Correo" required asp-for="Correo">
                    <input class="form-controller mb-3 rounded-1" type="password" placeholder="Contraseña" required asp-for="Clave">
                    <input class="form-controller mb-3 rounded-1" type="password" placeholder="Confirmar Contraseña" required asp-for="ConfirmarClave">
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-primary" type="submit">Registrate</button>
                    </div>
                    @if(ViewData["Mensaje"]!=null){
                        <div class="alert alert-danger" role=" alert">@ViewData["Mensaje"]</div>
                    }

                 <span>¿Ya tienes una cuenta? <a asp-controller="Acceso" asp-action="Login">Iniciar Sesión</a></span>   
                </form>

            </div>
        </div>
    </div>


   </div>




     <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
